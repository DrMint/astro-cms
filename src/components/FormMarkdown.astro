---
import type { FormContext } from "../utils/collections";
import FormField from "./FormField.astro";

interface Props {
  context: FormContext;
  value: string;
}

const { context, value } = Astro.props;
const isRequired = !context.optional;
---

<FormField label={context.label} required={context.optional !== true}>
  <textarea name={context.label} required={isRequired}>{value}</textarea>
</FormField>

<style>
  textarea {
    width: 30rem;
    height: 20rem;

    background-color: var(--sl-color-gray-6);
    border: 1px solid var(--sl-color-gray-5);
    padding: 0.75em 1em;
  }
</style>
